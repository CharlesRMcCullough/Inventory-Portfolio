@using InventoryClient.Integrations.Interfaces
@inject ICategoryIntegration Integration

<MudSelect
    T="int"
    Label="Categories"
    Value="@SelectedIndex"
    ValueChanged="OnSelectChanged"
    Disabled="@Disabled"
    Required="@Required"
    HelperText="Choose Category"
    HelperTextOnFocus="true">

    @if (Search)
    {
        <MudSelectItem Value="0">All Categories</MudSelectItem>
    }
    else
    {
        <MudSelectItem Value="0">Select Category</MudSelectItem>
    }


    @if (Categories != null)
    {
        foreach (var category in Categories)
        {
            <MudSelectItem Value="@category.Id">@category.Name</MudSelectItem>
        }
    }
</MudSelect>