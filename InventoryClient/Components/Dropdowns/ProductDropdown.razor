@using InventoryClient.Integrations.Interfaces
@inject IProductIntegration Integration

<MudSelect
    T="int"
    Label="Products"
    Value="@SelectedIndex"
    ValueChanged="OnSelectChanged"
    Disabled="@Disabled"
    Required="@Required"
    HelperText="Choose Products"
    HelperTextOnFocus="true">

    @if (Search)
    {
        <MudSelectItem Value="0">All Products</MudSelectItem>
    }
    else
    {
        <MudSelectItem Value="0">Select Product</MudSelectItem>
    }

    @if (Products != null)
    {
        foreach (var product in Products)
        {
            <MudSelectItem Value="@product.Id">@product.Name</MudSelectItem>
        }
    }
</MudSelect>