@using InventoryClient.Integrations.Interfaces
@inject IModelIntegration Integration

<MudSelect
    T="int"
    Label="Models"
    Value="@SelectedIndex"
    ValueChanged="OnSelectChanged"
    Disabled="@Disabled"
    Required="@Required"
    HelperText="Choose a Model"
    HelperTextOnFocus="true">

    @if (Search)
    {
        <MudSelectItem Value="0">All Models</MudSelectItem>
    }
    else
    {
        <MudSelectItem Value="0">Select Model</MudSelectItem>
    }


    @if (Models != null)
    {
        foreach (var model in Models)
        {
            <MudSelectItem Value="@model.Id">@model.Name</MudSelectItem>
        }
    }
</MudSelect>