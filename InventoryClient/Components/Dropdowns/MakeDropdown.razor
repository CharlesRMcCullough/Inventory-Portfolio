@using InventoryClient.Integrations.Interfaces
@inject IMakeIntegration Integration

<MudSelect
    T="int"
    Label="Makes"
    Value="@SelectedIndex"
    ValueChanged="OnSelectChanged"
    Disabled="@Disabled"
    Required="@Required"
    HelperText="Choose Make"
    HelperTextOnFocus="true">

    @if (Search)
    {
        <MudSelectItem Value="0">All Makes</MudSelectItem>
    }
    else
    {
        <MudSelectItem Value="0">Select Make</MudSelectItem>
    }

    @if (Makes != null)
    {
        foreach (var make in Makes)
        {
            <MudSelectItem Value="@make.Id">@make.Name</MudSelectItem>
        }
    }
</MudSelect>