@page "/"

<PageTitle>Home</PageTitle>

<div class="d-flex justify-center align-center w-100">
    <MudText Typo="Typo.h3" GutterBottom="true">Inventory Management</MudText>
</div>

<MudGrid Spacing="14" Justify="Justify.Center" Class="mt-15">
    <MudItem>
        <MudCard Outlined="true" Style="border-top-color: cornflowerblue; width: 210px">
            <MudCardContent>
                <MudText Style="color:cornflowerblue">Products</MudText>
                <MudText Typo="Typo.body2">Edit or add products</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Products</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
        <MudItem>
        <MudCard Outlined="true" Style="border-top-color: cornflowerblue; width: 210px" >
            <MudCardContent>
                <MudText Style="color:cornflowerblue">Items</MudText>
                <MudText Typo="Typo.body2">Edit or add Inventory Items</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">
                    <MudLink href="/items">Items</MudLink>
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem>
        <MudCard Outlined="true" Style="border-top-color: cornflowerblue; width: 210px" >
            <MudCardContent>
                <MudText Style="color:cornflowerblue">Categories</MudText>
                <MudText Typo="Typo.body2">Edit or add categories</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Categories</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem>
        <MudCard Outlined="true" Style="border-top-color: cornflowerblue; width: 210px" >
            <MudCardContent>
                <MudText Style="color:cornflowerblue">Makes</MudText>
                <MudText Typo="Typo.body2">Edit or add makes</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Makes</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
        <MudItem>
        <MudCard Outlined="true" Style="border-top-color: cornflowerblue; width: 210px" >
            <MudCardContent>
                <MudText Style="color:cornflowerblue">Models</MudText>
                <MudText Typo="Typo.body2">Edit or add models</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary">Models</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

</MudGrid>